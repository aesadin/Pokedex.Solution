@{
  Layout = "_Layout";
}

@using PokedexClient.Models;
@model List<PokedexClient.Models.Pokemon>;

<h1>All Pokemon</h1>
<hr/>
@if(@Model.Count == 0)
{
  <h3>No Pokemon have been added yet!</h3>
}
@foreach(Pokemon pokemon in Model)
{
  <P><img src="@pokemon.ImageSprite" alt="@pokemon.Species"></p>
  <P id="name">@Html.ActionLink($"{pokemon.Species}", "Details", new { id = pokemon.PokemonId })</p>
} 




